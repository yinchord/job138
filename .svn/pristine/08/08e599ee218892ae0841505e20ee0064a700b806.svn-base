<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="浙江市场美容店长"
                        android:textColor="@color/font_blue"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView1"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/textView1"
                        android:layout_marginTop="16dp"
                        android:lineSpacingMultiplier="1.3"
                        android:text="公司名称：深圳纯黑多肽科技发展有限公司\n工作经验：二年\n工作地区：广东深圳\n待遇水平：10000~14999元\n招聘期限：2013.11.07 ~ 2013.06.08"
                        android:textColor="@color/font_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/info"
                        android:layout_toRightOf="@+id/textView1"
                        android:paddingLeft="8dp"
                        android:text="(3人)"
                        android:textColor="@color/font_light_gray"
                        android:textSize="12sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_light_gray"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:text="职位要求"
                    android:textColor="@color/font_gray" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:lineSpacingMultiplier="1.3"
                    android:paddingLeft="16dp"
                    android:text="1.一年以上行业同岗位工作经历\n2.备团队管理能力、激励能力"
                    android:textColor="@color/font_gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_light_gray"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:text="联系方式"
                    android:textColor="@color/font_gray" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:text="联系人：李先生"
                    android:textColor="@color/font_gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:text="（联系我时请说明是在38美容人才网看到的）"
                    android:textColor="@color/font_light_gray2"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:drawableRight="@drawable/addr_icon"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    android:text="地址：深圳罗湖区人们南路发展中心大厦201室"
                    android:textColor="@color/font_gray"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_bg" >

        <ImageButton
            android:id="@+id/ImageButton03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/button_candidates_selector" />

        <ImageButton
            android:id="@+id/btPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/button_phone_selector" />

        <ImageButton
            android:id="@+id/ImageButton01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/button_collection_selector" />

        <ImageButton
            android:id="@+id/btShare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/button_share_selector" />
    </LinearLayout>

</RelativeLayout>