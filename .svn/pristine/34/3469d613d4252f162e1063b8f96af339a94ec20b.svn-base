<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/navigationbar_bg" >

        <ImageButton
            android:id="@+id/button_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/button_back_selector" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/userpost" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:background="@color/bg"
        android:padding="16dp" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_border"
            android:padding="1dp" >

            <LinearLayout
                android:id="@+id/layout_email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="电子邮箱:"
                    android:textColor="@color/font_gray"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:ems="10"
                    android:hint="常用电子邮箱"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@color/font_gray"
                    android:textColorHint="@color/font_light_gray"
                    android:textSize="16sp" >
                </EditText>
            </LinearLayout>

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/layout_email"
                android:background="@drawable/line1" />

            <LinearLayout
                android:id="@+id/layout_username"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/line1"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text=" 用 户 名 :"
                    android:textColor="@color/font_gray"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:ems="10"
                    android:hint="输入用户名"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@color/font_gray"
                    android:textColorHint="@color/font_light_gray"
                    android:textSize="16sp" >
                </EditText>
            </LinearLayout>

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/layout_username"
                android:background="@drawable/line1" />

            <LinearLayout
                android:id="@+id/layout_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/line2"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text=" 密     码  :"
                    android:textColor="@color/font_gray"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:ems="10"
                    android:hint="密码的长度为6~20位"
                    android:inputType="textPassword"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@color/font_gray"
                    android:textColorHint="@color/font_light_gray"
                    android:textSize="16sp" >
                </EditText>
            </LinearLayout>

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/layout_password"
                android:background="@drawable/line1" />

            <!--
                <LinearLayout
                android:id="@+id/layout_password2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/line3"
                android:padding="10dp" >

               <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="确认密码:"
                    android:textColor="@color/font_gray"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:ems="10"
                    android:hint="再次输入密码"
                    android:inputType="textPassword"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@color/font_gray"
                    android:textColorHint="@color/font_light_gray"
                    android:textSize="16sp" >
                </EditText>  
            </LinearLayout>

            <View
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/layout_password2"
                android:background="@drawable/line1" />
            -->

            <LinearLayout
                android:id="@+id/layout_tel"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/line3"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="手机号码:"
                    android:textColor="@color/font_gray"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/tel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:ems="10"
                    android:hint="输入可联系的电话号码"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@color/font_gray"
                    android:textColorHint="@color/font_light_gray"
                    android:textSize="16sp" >
                </EditText>
            </LinearLayout>
        </RelativeLayout>

        <CheckBox
            android:id="@+id/is_read"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_alignLeft="@+id/relativeLayout1"
            android:layout_alignRight="@+id/relativeLayout1"
            android:layout_below="@id/relativeLayout1"
            android:paddingRight="40dp"
            android:paddingLeft="10dp"
            android:button="@drawable/button_checkbox_selector"
            android:checked="false"
            android:drawableRight="@drawable/read_agreetment" />

        <ImageButton
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/is_read"
            android:layout_alignRight="@+id/is_read"
            android:layout_below="@+id/is_read"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_red_bg"
            android:src="@drawable/button_submit" />
    </RelativeLayout>

</RelativeLayout>