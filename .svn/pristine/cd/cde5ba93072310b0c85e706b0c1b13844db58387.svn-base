<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.fourmob.panningview.PanningView
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/index_header_bg"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/be"
        custom:panningDurationInMs="50000" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/index_header_bg"
        android:layout_alignParentLeft="true"
        android:src="@drawable/icon_flower" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@drawable/line1"
        android:scrollbars="none" >
    </ListView>

</RelativeLayout>