<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/resume_bg"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:padding="4dp"
        android:src="@drawable/resume_arrow" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/close_button"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="60dp"
            android:paddingLeft="5dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp" >

            <TextView
                android:id="@+id/job_type"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/textbox"
                android:drawableRight="@drawable/choosebtn"
                android:gravity="center_vertical"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:text="兼职"
                android:textColor="@color/font_gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/position"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/textbox"
                android:drawableRight="@drawable/arrow_right"
                android:gravity="center_vertical"
                android:hint="意向岗位"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:paddingTop="0dp"
                android:textColor="@color/font_gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/area"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/textbox"
                android:drawableRight="@drawable/arrow_right"
                android:gravity="center_vertical"
                android:hint="意向地区"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:paddingTop="0dp"
                android:textColor="@color/font_gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pay"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/textbox"
                android:drawableRight="@drawable/choosebtn"
                android:gravity="center_vertical"
                android:hint="面议"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:textColor="@color/font_gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/work_date"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/textbox"
                android:drawableRight="@drawable/choosebtn"
                android:gravity="center_vertical"
                android:hint="到岗时间"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:textColor="@color/font_gray"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/stay"
                style="@style/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:text=" 提供住宿"
                android:textColor="@color/font_gray"
                android:textSize="16sp" >
            </CheckBox>

            <CheckBox
                android:id="@+id/travel"
                style="@style/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:text=" 接受出差"
                android:textColor="@color/font_gray"
                android:textSize="16sp" >
            </CheckBox>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="其他要求:"
                android:textColor="@color/font_gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/textbox"
                android:ellipsize="end"
                android:hint="其他要求"
                android:maxLines="3"
                android:minLines="3"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textColor="@color/font_gray"
                android:textColorHint="@color/font_light_gray"
                android:textSize="16sp" >
            </TextView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="#50000000"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/button_save_selector" />
    </LinearLayout>

</RelativeLayout>