<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/navigationbar_bg" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="暂无用户"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ProgressBar
            android:id="@+id/loading"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:visibility="gone" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:background="@color/bg"
        android:fillViewport="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp" >

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="58dp"
                        android:layout_height="68dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="8dp"
                        android:background="@color/white"
                        android:padding="2dp"
                        android:src="@drawable/image_avatar_0" />

                    <ImageButton
                        android:id="@+id/avater_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imageView1"
                        android:layout_alignRight="@+id/imageView1"
                        android:layout_marginBottom="-6dp"
                        android:layout_marginRight="-6dp"
                        android:background="@null"
                        android:src="@drawable/camera_icon" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="8dp"
                    android:paddingLeft="0dp"
                    android:paddingTop="8dp" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="5dp"
                        android:text="电子邮箱:"
                        android:textColor="@color/font_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView1"
                        android:layout_alignBottom="@+id/textView1"
                        android:layout_toRightOf="@+id/textView1"
                        android:paddingLeft="5dp"
                        android:textColor="@color/font_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView1"
                        android:layout_below="@+id/textView1"
                        android:layout_marginTop="5dp"
                        android:text="手机号码:"
                        android:textColor="@color/font_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/TextView01"
                        android:layout_alignBottom="@+id/TextView01"
                        android:layout_alignLeft="@+id/email"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/icon_pen"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/font_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/TextView01"
                        android:layout_below="@+id/TextView01"
                        android:layout_marginTop="5dp"
                        android:text="求职状态:"
                        android:textColor="@color/font_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/TextView02"
                        android:layout_toRightOf="@+id/TextView02"
                        android:ellipsize="end"
                        android:lines="2"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/font_gray"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/pic_person_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout1" >

                <RelativeLayout
                    android:id="@+id/no_pic_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp" >

                    <ImageButton
                        android:id="@+id/choose_photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/bg_button_photo_user"
                        android:padding="0dp"
                        android:src="@drawable/button_photo_user" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/pic_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/photo_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="10dp"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/icon_camera"
                        android:text="个人风采"
                        android:textColor="@color/font_orange"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/photo_title" >

                        <ImageView
                            android:id="@+id/photo_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/button_left" />

                        <HorizontalScrollView
                            android:id="@+id/photo_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >

                            <LinearLayout
                                android:id="@+id/photo_show"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:orientation="horizontal" >

                                <!--
                                     <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/gray_border"
                                    android:padding="2px"
                                    android:src="@drawable/images_uesr" />
                                -->
                            </LinearLayout>
                        </HorizontalScrollView>

                        <ImageView
                            android:id="@+id/photo_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/button_right" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pic_person_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <Button
                        android:id="@+id/resume"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button_main_1"
                        android:text="简历管理"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/arrow_resume"
                        android:layout_width="wrap_content"
                        android:layout_height="49dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/arrow" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <Button
                        android:id="@+id/work"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button_main_0"
                        android:text="工作管理"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/arrow_work"
                        android:layout_width="wrap_content"
                        android:layout_height="49dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/arrow"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <Button
                        android:id="@+id/setting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button_main_0"
                        android:text="修改设置"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/arrow_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="49dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/arrow"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/resume_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/linearLayout2"
                android:layout_below="@+id/linearLayout2" >

                <RelativeLayout
                    android:id="@+id/my_resume_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/gray_border"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" >

                    <TextView
                        android:id="@+id/my_resume"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:drawableRight="@drawable/arrow_right"
                        android:gravity="center_vertical"
                        android:text="我的简历"
                        android:textColor="@color/font_gray"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/resume_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/my_resume"
                        android:layout_below="@+id/my_resume"
                        android:paddingBottom="5dp"
                        android:text="创建时间: 2013.02.12    刷新时间: 2013.11.25"
                        android:textColor="@color/font_light2_gray"
                        android:textSize="12sp"
                        android:visibility="gone" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/resume_button_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/my_resume_layout"
                    android:layout_marginTop="10dp" >

                    <ImageButton
                        android:id="@+id/refresh"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:src="@drawable/refresh_btn" />

                    <ImageButton
                        android:id="@+id/update"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:src="@drawable/revise_btn" />

                    <ImageButton
                        android:id="@+id/secrecy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:src="@drawable/secrecy_btn" />

                    <ImageButton
                        android:id="@+id/apply"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:src="@drawable/apply_btn" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/work_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/linearLayout2"
                android:layout_below="@+id/linearLayout2"
                android:layout_marginTop="16dp"
                android:background="@drawable/gray_border"
                android:orientation="vertical"
                android:padding="1dp"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/invite"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="面试邀请"
                    android:textColor="@color/font_gray"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/line1" />

                <TextView
                    android:id="@+id/apply_record"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="应聘记录"
                    android:textColor="@color/font_gray"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/line1" />

                <TextView
                    android:id="@+id/favorite"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="收藏夹"
                    android:textColor="@color/font_gray"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/line1" />

                <TextView
                    android:id="@+id/seem"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="简历被看"
                    android:textColor="@color/font_gray"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/line1" />

                <TextView
                    android:id="@+id/leave"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="评价留言"
                    android:textColor="@color/font_gray"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/linearLayout2"
                android:layout_below="@+id/linearLayout2"
                android:layout_marginTop="16dp"
                android:background="@drawable/gray_border"
                android:orientation="vertical"
                android:padding="1dp"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="密码"
                    android:textColor="@color/font_gray"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/line1" />

                <TextView
                    android:id="@+id/tel_status"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="手机号码"
                    android:textColor="@color/font_gray"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/line1" />

                <TextView
                    android:id="@+id/apply_status"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="求职状态"
                    android:textColor="@color/font_gray"
                    android:textSize="18sp" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>