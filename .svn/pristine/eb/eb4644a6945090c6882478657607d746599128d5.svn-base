<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/date"
            android:layout_alignParentTop="true"
            android:scaleType="center"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button_search"
            android:layout_alignLeft="@+id/button_search"
            android:layout_alignRight="@+id/button_search"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/button_search"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dp"
            android:background="@drawable/search_btnb" />

        <RelativeLayout
            android:id="@+id/message_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/personal_bg" />

            <Button
                android:id="@+id/message_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/user_bg"
                android:background="@drawable/button_message_selector"
                android:gravity="center"
                android:text="60"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/message_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/message_text1"
                android:background="@drawable/button_message_selector"
                android:gravity="center"
                android:text="60"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/message_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/message_text2"
                android:background="@drawable/button_message_selector"
                android:gravity="center"
                android:text="60"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/message_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/message_text3"
                android:background="@drawable/button_message_selector"
                android:gravity="center"
                android:text="60"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/message_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/message_text4"
                android:background="@drawable/button_message_selector"
                android:gravity="center"
                android:text="60"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/user_bg"
                android:layout_width="58dp"
                android:layout_height="68dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:scaleType="centerCrop"
                android:padding="6dp"
                android:background="@drawable/userpic_bg"
                android:src="@drawable/user_bg" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/user_bg"
                android:layout_alignRight="@+id/user_bg"
                android:src="@drawable/camera_icon" />

            <TextView
                android:id="@+id/message_new1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView2"
                android:layout_marginRight="-8dp"
                android:layout_marginTop="-8dp"
                android:layout_toLeftOf="@+id/message_text2"
                android:background="@drawable/quantity_bg"
                android:paddingTop="1dp"
                android:paddingLeft="4dp"
                android:text=" 10"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/message_new2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView2"
                android:layout_marginRight="-8dp"
                android:layout_marginTop="-8dp"
                android:layout_toLeftOf="@+id/message_text3"
                android:background="@drawable/quantity_bg"
                android:paddingTop="1dp"
                android:paddingLeft="4dp"
                android:text="  1"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/login_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:visibility="invisible" >

            <ImageButton
                android:id="@+id/button_login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="-30dp"
                android:layout_weight="1"
                android:background="@drawable/button_index_login"
                android:src="@drawable/button_login" />

            <ImageButton
                android:id="@+id/button_post"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-30dp"
                android:layout_weight="1"
                android:background="@drawable/button_index_post"
                android:src="@drawable/button_register" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>