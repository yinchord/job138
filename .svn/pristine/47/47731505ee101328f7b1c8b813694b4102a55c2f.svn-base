<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="广州市康丽企业品牌策划有限公司"
                    android:textColor="@color/font_blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_alignLeft="@+id/textView1"
                    android:layout_below="@+id/textView1"
                    android:layout_marginTop="16dp"
                    android:background="@color/font_gray"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/info"
                    android:layout_marginTop="16dp"
                    android:lineSpacingMultiplier="1.3"
                    android:text="大成观点：一次择业也许就能决定整个人生产就的高低。\n大成国际成立于1953年，其前身为大成洋行，由爱国商人江吾仲..."
                    android:textColor="@color/font_gray"
                    android:textSize="12sp" />

                <ImageButton
                    android:id="@+id/gps"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignRight="@+id/textView1"
                    android:layout_alignTop="@+id/imageView1"
                    android:background="@null"
                    android:src="@drawable/addr_icon" />

                <TextView
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/gps"
                    android:layout_toLeftOf="@+id/gps"
                    android:layout_toRightOf="@+id/imageView1"
                    android:lineSpacingMultiplier="1.3"
                    android:paddingLeft="16dp"
                    android:text="天河北路468号国际酒店6楼\n公司类型：医疗美容\n成立日期：2010.10.13\n员工人数：10-49人"
                    android:textColor="@color/font_gray"
                    android:textSize="11sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_light_gray"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:text="联系方式"
                android:textColor="@color/font_gray" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:text="联系人：李先生"
                android:textColor="@color/font_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:text="（联系我时请说明是在38美容人才网看到的）"
                android:textColor="@color/font_light_gray2"
                android:textSize="11sp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/menu_bg" >

        <ImageButton
            android:id="@+id/ImageButton03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/button_candidates_selector" />

        <ImageButton
            android:id="@+id/btShare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/button_share_selector" />
    </LinearLayout>

</RelativeLayout>