<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/resume_bg"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:padding="4dp"
        android:src="@drawable/resume_arrow" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/close_button"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="60dp"
            android:paddingLeft="5dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp" >

            <TextView
                android:id="@+id/certificate"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/textbox"
                android:drawableRight="@drawable/arrow_right"
                android:gravity="center_vertical"
                android:hint="资格证书"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:paddingTop="0dp"
                android:singleLine="true"
                android:textColor="@color/font_gray"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="发展方向:"
                android:textColor="@color/font_gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/development"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/textbox"
                android:ellipsize="end"
                android:maxLines="3"
                android:minLines="3"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="0dp"
                android:textColor="@color/font_gray"
                android:textColorHint="@color/font_light_gray"
                android:textSize="16sp" >
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="专业描述:"
                android:textColor="@color/font_gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/techniques"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/textbox"
                android:ellipsize="end"
                android:maxLines="3"
                android:minLines="3"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="0dp"
                android:textColor="@color/font_gray"
                android:textColorHint="@color/font_light_gray"
                android:textSize="16sp" >
            </TextView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="#50000000"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/button_save_selector" />
    </LinearLayout>

</RelativeLayout>