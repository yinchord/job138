<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/bartall" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/setting" />

        <ProgressBar
            android:id="@+id/loading"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:visibility="gone" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推送管理"
                    android:textColor="@color/font_blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/pushanagement_bg" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:padding="16dp"
                        android:text="面试通知"
                        android:textColor="@color/font_gray"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/textView2"
                        android:padding="16dp"
                        android:text="职位订阅"
                        android:textColor="@color/font_gray"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/interview"
                        android:layout_width="53dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView2"
                        android:layout_alignBottom="@+id/textView2"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:button="@drawable/switch_selector" />

                    <CheckBox
                        android:id="@+id/orderhir"
                        android:layout_width="53dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/TextView01"
                        android:layout_alignBottom="@+id/TextView01"
                        android:layout_alignLeft="@+id/interview"
                        android:button="@drawable/switch_selector" />

                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:background="@drawable/line1" />

            <!-- <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/more_icon"
                android:padding="16dp"
                android:text="关注官方微信"
                android:textColor="@color/font_gray"
                android:textSize="16sp" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:background="@drawable/line1" /> -->

            <TextView
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/more_icon"
                android:padding="16dp"
                android:text="分享给好友"
                android:textColor="@color/font_gray"
                android:textSize="16sp" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:background="@drawable/line1" />

            <TextView
                android:id="@+id/bind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/more_icon"
                android:padding="16dp"
                android:text="绑定管理"
                android:textColor="@color/font_gray"
                android:textSize="16sp" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:background="@drawable/line1" />

            <TextView
                android:id="@+id/feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/more_icon"
                android:padding="16dp"
                android:text="意见反馈"
                android:textColor="@color/font_gray"
                android:textSize="16sp" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:background="@drawable/line1" />

            <TextView
                android:id="@+id/update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/more_icon"
                android:padding="16dp"
                android:text="检查更新"
                android:textColor="@color/font_gray"
                android:textSize="16sp" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:background="@drawable/line1" />

            <TextView
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/more_icon"
                android:padding="16dp"
                android:text="关于138job"
                android:textColor="@color/font_gray"
                android:textSize="16sp" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:background="@drawable/line1" />

            <TextView
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/more_icon"
                android:padding="16dp"
                android:text="注销登录"
                android:textColor="@color/font_gray"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>