<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_list_bg_selector"
    android:padding="16dp" >

    <TextView
        android:id="@+id/title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:drawableRight="@drawable/vip"
        android:paddingBottom="4dp"
        android:singleLine="true"
        android:text="广州极迅客信息科技有限公司"
        android:textColor="@color/font_blue"
        android:textSize="16sp" />
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_alignLeft="@+id/title_name"
        android:layout_below="@+id/title_name">
        
        <TextView 
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="公司类型：美容院"
        	android:textSize="11sp"
        	android:textColor="@color/font_gray"/>
        
            
            <TextView 
                android:id="@+id/area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:minWidth="120dp"
                android:layout_below="@id/name"
                android:layout_alignLeft="@id/name"
                android:text="地区：广东广州 "
                android:textSize="11sp"
        		android:textColor="@color/font_gray"/>
            
            <TextView 
                android:id="@+id/pay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/area"
                android:layout_alignBottom="@id/area"
                android:layout_marginLeft="2dp"
                android:singleLine="true"
                android:text="月薪 :"
                android:textSize="11sp"
        		android:textColor="@color/font_gray"/>
            <TextView 
                android:id="@+id/pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="130dp"
                android:layout_toRightOf="@id/pay1"
                android:layout_alignBottom="@id/area"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:text="面试"
                android:textSize="11sp"
        		android:textColor="@color/font_red"/>
        
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/more_icon" />

    <TextView
        android:id="@+id/announce_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageView1"
        android:textColor="@color/font_light_gray"
        android:layout_marginRight="16dp"
        android:textSize="12sp"
        android:text="2013.11.07" />

</RelativeLayout>